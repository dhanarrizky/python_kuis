{% extends "base.html.jinja" %}
{% block title%}Ramalan Cuaca page{% endblock %}

{% block content%}
    <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Ramalan Cuaca</h6>
                            <div class="table-responsive">
                                <form method="post">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" name="city" placeholder="Your Username">
                                        <label for="floatingInput">Kota Kamu</label>
                                    </div>
                                    <button class="btn btn-primary py-3 w-100 mb-4">Search</button>
                                </form>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Kota</th>
                                            <th scope="col">Hari, Tanggal</th>
                                            <th scope="col">Temperatur</th>
                                            <th scope="col">Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% if forecast %}
                                        {% for weater in forecast %}
                                            <tr>
                                                <th scope="row">{{ weater.no }}</th>
                                                <td>{{ city }}</td>
                                                <td>{{ weater.date }}</td>
                                                <td>{{ weater.temperature }} Â°C</td>
                                                <td>{{ weater.weather_description }}</td>
                                            </tr>
                                        {% endfor %}
                                    {% endif%}
                                    {%if message %}
                                        <h3>search : {{ message }}</h3>
                                    {% else %}
                                        <h3>search : {{ city }}</h3>
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->
{% endblock %}